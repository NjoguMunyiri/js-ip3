{{yield}}
{{#if showNewAnswerForm}}
  <div class="jumbotron">
    <form>
      <div class="form-group">
        <label for="mwandishi">Author</label>
        {{input value=mwandishi id="mwandishi"}}
      </div>
      <div class="form-group">
        <label for="jibu">Answer</label>
        {{textarea value=jibu id="jibu"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'showAnswerForm'}}>Add Answer</button>
{{/if}}

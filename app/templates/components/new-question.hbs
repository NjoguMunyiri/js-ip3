{{yield}}
{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div class="jumbotron">
    <form class="">
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="note">Additional Note</label>
        {{textarea value=note id="note"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showQuestionForm'}}>Add Question</button>
{{/if}}
